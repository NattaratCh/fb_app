<div id = "container">
  <div id="header" style="background-color:#088A68; height: 100px;">
  </div>
  <ul class="breadcrumb">
    <li>
      <a href="/users/1">MY PROFILE </a>
    </li>
  </ul>
  <div id="content" style="height: 300px">
    <div id="profile">
      <div class="popover right" style="width: 20%">
      <div class="arrow"></div>
      <h3 class="popover-title">MY PROFILE      <%= link_to 'Edit', edit_user_path(@user) %></h3>
      <div class="popover-content">
        <img src = "C:/Sites/rails_projects/fb_app/Girl_2x.png"  width="100px" height="100px"><br/>
          <strong>Name:</strong>
          <%= @user.name %><br/> 
          <strong>Edu:</strong>
          <%= @user.edu %><br/> 
          <strong>Hobby:</strong>
          <%= @user.hobby %><br/> 
          <strong>Birthday:</strong>
          <%= @user.birthday %><br/> 
          <strong>Relationship:</strong>
          <%= @user.relationship %><br/> 
      </div>
    </div>
    <div id="post">
      <div id="status" style="width:40%">
        <textarea class="span6" rows="3"  placeholder="What is your status?"></textarea>
      </div>
    </div>
        
  </div>
</div>


      
